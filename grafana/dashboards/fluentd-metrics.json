{
  "title": "Fluentd Metrics",
  "tags": [
    "fluentd",
    "logging"
  ],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "15s",
  "panels": [
    {
      "id": 1,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "type": "stat",
      "title": "Fluentd Status",
      "targets": [
        {
          "expr": "up{job=\"fluentd\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "green",
                "value": 1
              }
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "type": "stat",
      "title": "Logs Processed",
      "targets": [
        {
          "expr": "sum(rate(fluentd_output_status_num_records_total[5m]))",
          "refId": "A"
        }
      ]
    },
    {
      "id": 3,
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 8
      },
      "type": "graph",
      "title": "Log Processing Rate",
      "targets": [
        {
          "expr": "rate(fluentd_output_status_num_records_total[5m])",
          "legendFormat": "{{plugin_id}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 4,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 16
      },
      "type": "graph",
      "title": "Buffer Queue Length",
      "targets": [
        {
          "expr": "fluentd_output_status_buffer_queue_length",
          "legendFormat": "{{plugin_id}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 5,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 16
      },
      "type": "graph",
      "title": "Buffer Total Bytes",
      "targets": [
        {
          "expr": "fluentd_output_status_buffer_total_bytes",
          "legendFormat": "{{plugin_id}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "bytes",
          "label": "Bytes"
        }
      ]
    },
    {
      "id": 6,
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 24
      },
      "type": "graph",
      "title": "Output Errors",
      "targets": [
        {
          "expr": "rate(fluentd_output_status_emit_records[5m])",
          "legendFormat": "Emitted - {{plugin_id}}",
          "refId": "A"
        },
        {
          "expr": "rate(fluentd_output_status_retry_count[5m])",
          "legendFormat": "Retries - {{plugin_id}}",
          "refId": "B"
        }
      ]
    }
  ]
}