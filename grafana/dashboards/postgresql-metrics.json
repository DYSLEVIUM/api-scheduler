{
  "title": "PostgreSQL Metrics",
  "tags": [
    "postgresql",
    "database"
  ],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "15s",
  "panels": [
    {
      "id": 1,
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 0,
        "y": 0
      },
      "type": "stat",
      "title": "Temporal DB Status",
      "targets": [
        {
          "expr": "up{job=\"postgres-temporal\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "green",
                "value": 1
              }
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 8,
        "y": 0
      },
      "type": "stat",
      "title": "App DB Status",
      "targets": [
        {
          "expr": "up{job=\"postgres-app\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "green",
                "value": 1
              }
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 16,
        "y": 0
      },
      "type": "stat",
      "title": "Temporal DB Connections",
      "targets": [
        {
          "expr": "pg_stat_database_numbackends{job=\"postgres-temporal\"}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 4,
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 0,
        "y": 8
      },
      "type": "stat",
      "title": "App DB Connections",
      "targets": [
        {
          "expr": "pg_stat_database_numbackends{job=\"postgres-app\"}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 5,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 8,
        "y": 8
      },
      "type": "stat",
      "title": "Temporal DB Size",
      "targets": [
        {
          "expr": "pg_database_size_bytes{job=\"postgres-temporal\",datname=\"temporal\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "decimals": 2
        }
      }
    },
    {
      "id": 6,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 16
      },
      "type": "stat",
      "title": "App DB Size",
      "targets": [
        {
          "expr": "pg_database_size_bytes{job=\"postgres-app\",datname=\"api_scheduler\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "decimals": 2
        }
      }
    },
    {
      "id": 7,
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 24
      },
      "type": "graph",
      "title": "Database Connections Over Time",
      "targets": [
        {
          "expr": "pg_stat_database_numbackends{job=\"postgres-temporal\"}",
          "legendFormat": "Temporal DB",
          "refId": "A"
        },
        {
          "expr": "pg_stat_database_numbackends{job=\"postgres-app\"}",
          "legendFormat": "App DB",
          "refId": "B"
        }
      ]
    },
    {
      "id": 8,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 32
      },
      "type": "graph",
      "title": "Transactions (Temporal DB)",
      "targets": [
        {
          "expr": "rate(pg_stat_database_xact_commit{job=\"postgres-temporal\"}[5m])",
          "legendFormat": "Commits",
          "refId": "A"
        },
        {
          "expr": "rate(pg_stat_database_xact_rollback{job=\"postgres-temporal\"}[5m])",
          "legendFormat": "Rollbacks",
          "refId": "B"
        }
      ]
    },
    {
      "id": 9,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 32
      },
      "type": "graph",
      "title": "Transactions (App DB)",
      "targets": [
        {
          "expr": "rate(pg_stat_database_xact_commit{job=\"postgres-app\"}[5m])",
          "legendFormat": "Commits",
          "refId": "A"
        },
        {
          "expr": "rate(pg_stat_database_xact_rollback{job=\"postgres-app\"}[5m])",
          "legendFormat": "Rollbacks",
          "refId": "B"
        }
      ]
    },
    {
      "id": 10,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 40
      },
      "type": "graph",
      "title": "Tuples (Temporal DB)",
      "targets": [
        {
          "expr": "rate(pg_stat_database_tup_inserted{job=\"postgres-temporal\"}[5m])",
          "legendFormat": "Inserted",
          "refId": "A"
        },
        {
          "expr": "rate(pg_stat_database_tup_updated{job=\"postgres-temporal\"}[5m])",
          "legendFormat": "Updated",
          "refId": "B"
        },
        {
          "expr": "rate(pg_stat_database_tup_deleted{job=\"postgres-temporal\"}[5m])",
          "legendFormat": "Deleted",
          "refId": "C"
        }
      ]
    },
    {
      "id": 11,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 40
      },
      "type": "graph",
      "title": "Tuples (App DB)",
      "targets": [
        {
          "expr": "rate(pg_stat_database_tup_inserted{job=\"postgres-app\"}[5m])",
          "legendFormat": "Inserted",
          "refId": "A"
        },
        {
          "expr": "rate(pg_stat_database_tup_updated{job=\"postgres-app\"}[5m])",
          "legendFormat": "Updated",
          "refId": "B"
        },
        {
          "expr": "rate(pg_stat_database_tup_deleted{job=\"postgres-app\"}[5m])",
          "legendFormat": "Deleted",
          "refId": "C"
        }
      ]
    },
    {
      "id": 12,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 48
      },
      "type": "graph",
      "title": "Cache Hit Ratio (Temporal DB)",
      "targets": [
        {
          "expr": "sum(rate(pg_stat_database_blks_hit{job=\"postgres-temporal\"}[5m])) / (sum(rate(pg_stat_database_blks_hit{job=\"postgres-temporal\"}[5m])) + sum(rate(pg_stat_database_blks_read{job=\"postgres-temporal\"}[5m]))) * 100",
          "legendFormat": "Hit Ratio %",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "percent",
          "max": 100,
          "min": 0,
          "label": "Percentage"
        }
      ]
    },
    {
      "id": 13,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 48
      },
      "type": "graph",
      "title": "Cache Hit Ratio (App DB)",
      "targets": [
        {
          "expr": "sum(rate(pg_stat_database_blks_hit{job=\"postgres-app\"}[5m])) / (sum(rate(pg_stat_database_blks_hit{job=\"postgres-app\"}[5m])) + sum(rate(pg_stat_database_blks_read{job=\"postgres-app\"}[5m]))) * 100",
          "legendFormat": "Hit Ratio %",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "percent",
          "max": 100,
          "min": 0,
          "label": "Percentage"
        }
      ]
    },
